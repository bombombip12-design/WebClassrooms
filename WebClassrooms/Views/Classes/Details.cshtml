@model WebClassrooms.Models.Class
@{
    ViewData["Title"] = "Chi tiết lớp";
}

<div class="card mb-3">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/default-cover.jpg" : Model.CoverImageUrl)" class="card-img-top cover-img" alt="cover" />
    <div class="card-body">
        <h3>@Model.ClassName</h3>
        <p>@Model.Description</p>
        <p><strong>Mã vào lớp:</strong> @Model.JoinCode</p>
        <p><strong>Người tạo:</strong> @Model.Owner?.FullName</p>
        <a class="btn btn-outline-primary" asp-controller="Assignments" asp-action="Index" asp-route-classId="@Model.Id">Xem bài tập</a>
    </div>
</div>
