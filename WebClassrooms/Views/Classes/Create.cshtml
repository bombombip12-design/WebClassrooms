@model WebClassrooms.Models.Class
@{
    ViewData["Title"] = "Tạo lớp mới";
}

<h3>Tạo lớp mới</h3>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ClassName" class="form-label"></label>
        <input asp-for="ClassName" class="form-control" />
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="JoinCode" class="form-label"></label>
        <input asp-for="JoinCode" class="form-control" />
        <span asp-validation-for="JoinCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CoverImageUrl" class="form-label">Cover Image URL</label>
        <input asp-for="CoverImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
