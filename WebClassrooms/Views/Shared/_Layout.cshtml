<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebClassrooms</title>

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/Classroom.css" rel="stylesheet" />
</head>
<body>

    <div class="d-flex">

        <!-- Sidebar -->
        <div id="sidebar" class="sidebar expanded bg-light">

            <!-- Sidebar Header tách riêng -->
            <div id="sidebarHeader" class="sidebar-header d-flex align-items-center p-3">
                <i id="toggleSidebar" class="fa fa-bars me-3" style="cursor:pointer;"></i>
                <span class="fw-bold fs-4 sidebar-text">Lớp học</span>
            </div>

            <!-- Sidebar Menu -->
            <div id="sidebarMenu">
                <a asp-controller="Home" asp-action="Index" class="sidebar-item @((ViewContext.RouteData.Values["Controller"].ToString() == "Home") ? "active" : "")">
                    <i class="fa fa-home me-3"></i>
                    <span class="sidebar-text">Màn hình chính</span>
                </a>

            <!-- My Classes -->
            <div class="sidebar-section-title sidebar-text">Các lớp của tôi</div>
            <a asp-controller="Classes" asp-action="List" class="sidebar-item @((ViewContext.RouteData.Values["Controller"].ToString() == "Classes") ? "active" : "")">
                <i class="fa fa-layer-group me-3"></i>
                <span class="sidebar-text">Danh sách lớp</span>
            </a>

            <!-- Tasks -->
            <div class="sidebar-section-title sidebar-text">Việc cần làm</div>
            <a asp-controller="Tasks" asp-action="Index" class="sidebar-item @((ViewContext.RouteData.Values["Controller"].ToString() == "Tasks") ? "active" : "")">
                <i class="fa fa-list-check me-3"></i>
                <span class="sidebar-text">Bài tập</span>
            </a>

            <!-- Footer -->
            <div class="sidebar-footer mt-auto">
                <a asp-controller="Archive" asp-action="Index" class="sidebar-item @((ViewContext.RouteData.Values["Controller"].ToString() == "Archive") ? "active" : "")">
                    <i class="fa fa-box-archive me-3"></i>
                    <span class="sidebar-text">Lớp học lưu trữ</span>
                </a>
                <a asp-controller="Settings" asp-action="Index" class="sidebar-item @((ViewContext.RouteData.Values["Controller"].ToString() == "Settings") ? "active" : "")">
                    <i class="fa fa-gear me-3"></i>
                    <span class="sidebar-text">Cài đặt</span>
                </a>
            </div>
        </div>

        <!-- MAIN CONTENT -->
        <div id="mainContent" class="content expanded flex-grow-1 p-4">
                 <div class="container">
                    @RenderBody()
                </div>
        </div>

    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/sidebar.js"></script>

</body>
</html>
