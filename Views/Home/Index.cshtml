@model List<FinalASB.ViewModels.ClassViewModel>
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="page-header">
    <div>
        <h1><i class="fas fa-home me-2"></i>Lớp học của tôi</h1>
        <p class="text-muted mb-0">Quản lý và theo dõi các lớp học của bạn</p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <a asp-controller="Classes" asp-action="Join" class="btn btn-outline-primary">
            <i class="fas fa-sign-in-alt"></i>
            <span>Tham gia lớp học</span>
        </a>
        <a asp-controller="Classes" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            <span>Tạo lớp học</span>
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="empty-state">
        <i class="fas fa-folder-open"></i>
        <h4>Bạn chưa tham gia lớp học nào</h4>
        <p>Tạo lớp học mới hoặc tham gia bằng mã lớp học để bắt đầu</p>
        <div class="d-flex gap-2 justify-content-center">
            <a asp-controller="Classes" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Tạo lớp học
            </a>
            <a asp-controller="Classes" asp-action="Join" class="btn btn-outline-primary">
                <i class="fas fa-sign-in-alt me-2"></i>Tham gia lớp học
            </a>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @{
            var colors = new[] { "primary", "success", "warning", "danger", "info" };
            var colorIndex = 0;
        }
        @foreach (var classItem in Model)
        {
            var colorClass = colors[colorIndex % colors.Length];
            colorIndex++;
            <div class="col-md-4 col-lg-3 fade-in">
                <div class="card class-card h-100">
                    <div class="class-card-header @colorClass">
                        @if (!string.IsNullOrEmpty(classItem.CoverImageUrl))
                        {
                            <img src="@classItem.CoverImageUrl" alt="@classItem.ClassName" style="width: 100%; height: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <i class="fas fa-chalkboard-teacher"></i>
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="class-card-title">@classItem.ClassName</h5>
                        <p class="class-card-subtitle">
                            <i class="fas fa-user-tie me-1"></i>@classItem.OwnerName
                        </p>
                        @if (!string.IsNullOrEmpty(classItem.Description))
                        {
                            <p class="class-card-description">
                                @(classItem.Description.Length > 100 ? classItem.Description.Substring(0, 100) + "..." : classItem.Description)
                            </p>
                        }
                        <div class="class-card-footer mt-auto">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-users text-muted"></i>
                                <small class="text-muted">@classItem.StudentCount</small>
                            </div>
                            <span class="badge bg-info">@classItem.UserRole</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent p-0">
                        <a asp-controller="Classes" asp-action="Details" asp-route-id="@classItem.Id" 
                           class="btn btn-primary w-100 rounded-0" style="border-radius: 0 0 12px 12px !important;">
                            <i class="fas fa-door-open me-2"></i>Mở lớp học
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
