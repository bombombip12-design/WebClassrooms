@model FinalASB.ViewModels.CreateClassViewModel
@{
    ViewData["Title"] = "Tạo lớp học";
}

<div class="page-header">
    <div>
        <h1><i class="fas fa-plus-circle me-2"></i>Tạo lớp học mới</h1>
        <p class="text-muted mb-0">Tạo lớp học mới để bắt đầu giảng dạy hoặc học tập</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-md">
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    <div class="mb-4">
                        <label asp-for="ClassName" class="form-label">
                            <i class="fas fa-book me-2"></i>Tên lớp học <span class="text-danger">*</span>
                        </label>
                        <input asp-for="ClassName" class="form-control form-control-lg" placeholder="Ví dụ: Toán học lớp 10A" />
                        <span asp-validation-for="ClassName" class="text-danger small"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left me-2"></i>Mô tả
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Nhập mô tả về lớp học (tùy chọn)"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-between gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check me-2"></i>Tạo lớp học
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
