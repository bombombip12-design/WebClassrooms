@{
    ViewData["Title"] = "Tham gia lớp học";
}

<div class="page-header">
    <div>
        <h1><i class="fas fa-sign-in-alt me-2"></i>Tham gia lớp học</h1>
        <p class="text-muted mb-0">Nhập mã lớp học để tham gia</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-md">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-key" style="font-size: 3rem; color: var(--primary-color);"></i>
                </div>
                <form asp-action="Join" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    <div class="mb-4">
                        <label for="joinCode" class="form-label">
                            <i class="fas fa-hashtag me-2"></i>Mã lớp học
                        </label>
                        <input type="text" name="joinCode" id="joinCode" 
                               class="form-control form-control-lg text-center" 
                               placeholder="Nhập mã lớp học" 
                               maxlength="6" 
                               style="font-size: 1.5rem; letter-spacing: 0.5rem; font-weight: 600;" 
                               autofocus />
                        <small class="form-text text-muted mt-2 d-block text-center">
                            Mã lớp học thường gồm 6 ký tự
                        </small>
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Tham gia
                        </button>
                    </div>
                </form>
                <div class="text-center mt-4 pt-3 border-top">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-uppercase and format join code
        document.getElementById('joinCode').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
        });
    </script>
}
